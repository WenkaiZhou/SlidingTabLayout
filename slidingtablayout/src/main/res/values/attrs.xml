<resources>

    <declare-styleable name="SlidingTabLayout">

        <!--the widget left and right padding-->
        <attr name="left_padding" format="reference|dimension" />
        <attr name="right_padding" format="reference|dimension" />

        <!--the layout of each tab-->
        <attr name="tab_layout" format="reference" />

        <attr name="tab_horizontal_average" format="boolean" />
        <attr name="tab_horizontal_padding" format="reference|dimension" />
        <attr name="tab_vertical_gravity" format="enum">
            <enum name="center" value="16" />
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
        </attr>

        <attr name="tab_text_size_default" format="reference|dimension" />
        <attr name="tab_text_size_selected" format="reference|dimension" />
        <attr name="tab_text_color_default" format="reference|color" />
        <attr name="tab_text_color_selected" format="reference|color" />
        <attr name="tab_text_bold" format="boolean" />
        <attr name="tab_text_selected_bold" format="boolean" />
        <attr name="tab_text_show_scale_anim" format="boolean" />

        <attr name="indicator_enabled" format="boolean" />
        <attr name="indicator_creep" format="boolean" />
        <attr name="indicator_color" format="reference|color" />
        <attr name="indicator_thickness" format="reference|dimension" />
        <attr name="indicator_width" format="reference|dimension" />
        <attr name="indicator_width_ratio" format="float" />
        <attr name="indicator_corner_radius" format="reference|dimension" />
        <attr name="indicator_top_margin" format="reference|dimension" />
        <attr name="indicator_bottom_margin" format="reference|dimension" />
        <attr name="indicator_gravity" format="enum">
            <enum name="center" value="17" />
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
        </attr>

        <attr name="divider_enabled" format="boolean" />
        <attr name="divider_color" format="reference|color" />
        <attr name="divider_thickness" format="reference|dimension" />
        <attr name="divider_padding" format="reference|dimension" />

    </declare-styleable>

</resources>