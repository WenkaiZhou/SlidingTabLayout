<resources>

    <declare-styleable name="SlidingTabLayout">

        <attr name="stl_tabMode" format="enum">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>

        <!--the widget left and right padding-->
        <attr name="stl_leftPadding" format="reference|dimension" />
        <attr name="stl_rightPadding" format="reference|dimension" />

        <!--whether smooth scroll when tab click-->
        <attr name="stl_smoothScroll" format="boolean" />

        <!--the layout of each tab-->
        <attr name="stl_tabLayout" format="reference" />

        <attr name="stl_tabPadding" format="reference|dimension" />
        <attr name="stl_tabPaddingStart" format="reference|dimension" />
        <attr name="stl_tabPaddingTop" format="reference|dimension" />
        <attr name="stl_tabPaddingEnd" format="reference|dimension" />
        <attr name="stl_tabPaddingBottom" format="reference|dimension" />
        <attr name="stl_tabGravity" format="enum">
            <enum name="center" value="16" />
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
        </attr>

        <attr name="stl_tabTextSize" format="reference|dimension" />
        <attr name="stl_tabSelectedTextSize" format="reference|dimension" />
        <attr name="stl_tabTextColor" format="reference|color" />
        <attr name="stl_tabSelectedTextColor" format="reference|color" />
        <attr name="stl_tabTextBold" format="boolean" />
        <attr name="stl_tabTextSelectedBold" format="boolean" />
        <attr name="stl_tabTextShowScaleAnim" format="boolean" />

        <attr name="stl_indicatorCreep" format="boolean" />
        <attr name="stl_indicatorColor" format="reference|color" />
        <attr name="stl_indicatorBackground" format="reference|color" />
        <attr name="stl_indicatorHeight" format="reference|dimension" />
        <attr name="stl_indicatorWidth" format="reference|dimension" />
        <attr name="stl_indicatorWidthRatio" format="float" />
        <attr name="stl_indicatorCornerRadius" format="reference|dimension" />
        <attr name="stl_indicatorTopMargin" format="reference|dimension" />
        <attr name="stl_indicatorBottomMargin" format="reference|dimension" />
        <attr name="stl_indicatorGravity" format="enum">
            <enum name="center" value="17" />
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
        </attr>

        <attr name="stl_dividerColor" format="reference|color" />
        <attr name="stl_dividerWidth" format="reference|dimension" />
        <attr name="stl_dividerPadding" format="reference|dimension" />

    </declare-styleable>

</resources>